<h1>Products Index</h1>


Products:

<table>
	<tr>
		<th>id</th>
		<th>Category</th>
		<th>Product</th>
		<th>Dosage</th>
		<th>Package</th>
		<th></th>
		<th></th>
	</tr>
	<% products.each( function(product) { %>
	<tr>
		<td> <a href="/#/products/<%= product.id %>"><%= product.id + 1000 %></a> </td>
		<td> <%= product.escape("category") %> </td>
		<td> <%= product.escape("name") %> </td>
		<td> <%= product.escape("dosage") %> </td>
		<td> <%= product.escape("package") %> </td>
		<td> <a href="/#/products/<%= product.id %>/edit"> Edit </a><td>
		<td><a class="productDelete" data-id="<%= product.id%>"> delete </a></td>
	</tr>
	<% }); %>


</table>

<br>


<h2>Add a Product</h2>
<form class="productAdd">
	<label>Category:
		<input type="text" name="category">
	</label>
	<label>Product:
		<input type="text" name="name">
	</label>
	<label>Dosage:
		<input type="text" name="dosage">
	</label>
	<label>Package:
		<input type="text" name="package">
	</label>	
	<input type="submit" value="Add Product">
</form>

<ul class="errors">
</ul>


