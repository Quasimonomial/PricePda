<!DO/quasimonomial/vetpda/commits/allCTYPE html>
<html>
<head>
  <title>Vetpda</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="https://www.google.com/jsapi?autoload={'modules':[{'name':'visualization','version':'1.1','packages':['corechart']}]}"></script>
</head>
<body>
	<% if logged_in? %>
		<%= current_user.email %>
		<% if current_user.is_admin %>
			<h1>You are an admin!</h1>
		<% end %>
		<% unless current_user.activated %>
			<h1>Your account is not activated!  Please check your email and activate your account.</h1>
		<% end %>

		<%= link_to "Edit your settings", edit_user_url(current_user) %>
		<%= button_to "Sign Out", session_url, :method => :delete %>
	<% else %>
		<%= link_to "Sign In", new_session_url %>
		<%= link_to "Sign Up", new_user_url %>
	<% end %>
	
	<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>
	<%= flash[:info].html_safe if flash[:info] %>
	<%= yield %>

</body>
</html>
