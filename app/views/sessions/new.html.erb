<h1>Sign In</h1>

<form action="<%= session_url %>" method="POST">
	<label>
		Email: <input type="text" name="user[email]">
	</label>
	<label>
		Password: <input type="password" name="user[password]">
	</label>
	<input type="submit" value="Sign In!">
</form>
<br>
<%= link_to "Forgot your password?", new_password_reset_path %>
<br>
<p>Need to Resend an activation email?</p>
<form  action="/email/resend_activation_email", method="POST">
	<label>
		Email: <input type="text" name="email">
	</label>
	<input type="submit" value="Resend Activation!">
</form>
